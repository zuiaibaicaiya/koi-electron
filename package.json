{
  "name": "koi-electron",
  "version": "1.0.0",
  "author": {
    "name": "zuiaibaicaiya(最爱白菜呀)",
    "email": "1355081829@qq.com"
  },
  "license": "MIT",
  "description": "基于electron+nestjs+typeorm+vue+rsbuild的桌面开发方案",
  "main": "koi-ui/dist/electron/main.cjs",
  "scripts": {
    "dev": "turbo dev",
    "stub": "turbo stub",
    "preview": "turbo build && electron .",
    "postinstall": "rimraf .turbo && electron-builder install-app-deps && npm run stub",
    "build": "turbo build && electron-builder"
  },
  "workspaces": [
    "koi-ui",
    "koi-server",
    "packages/*",
    "examples/*"
  ],
  "packageManager": "npm@10.9.2",
  "devDependencies": {
    "electron": "^39.2.5",
    "electron-builder": "^26.0.12",
    "electron-rs": "^1.1.3",
    "turbo": "^2.6.3"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.9",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.9",
    "@nestjs/mapped-types": "*",
    "@nestjs/platform-express": "^11.1.9",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/typeorm": "^11.0.0",
    "bcryptjs": "^3.0.3",
    "bytenode": "^1.5.7",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "electron-store": "^11.0.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sqlite3": "^5.1.7",
    "typeorm": "^0.3.28"
  },
  "build": {
    "icon": "logo.png",
    "directories": {
      "output": "build-electron"
    },
    "extraResources": [],
    "files": [
      "koi-ui/dist",
      "koi-server/dist"
    ],
    "dmg": {
      "icon": "./logo.icns"
    }
  }
}
